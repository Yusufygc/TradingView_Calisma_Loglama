{
  "manifest_version": 3,
  "name": "TradingView Smart Logger",
  "version": "1.0",
  "description": "TradingView'da kopyalanan Ã§izim nesnelerini otomatik loglar.",
  "permissions": [
    "clipboardRead",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.tradingview.com/chart/*"],
      "js": ["content.js"]
    }
  ]
}