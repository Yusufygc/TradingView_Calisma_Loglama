{
  "manifest_version": 3,
  "name": "TradingView Logger",
  "version": "2.0.0",
  "description": "TradingView'de hisse değişimlerinizi otomatik loglar, fiyat geçmişini takip eder ve kişisel notlarınızı saklar.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.tradingview.com/*",
    "https://tr.tradingview.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.tradingview.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "TradingView Logger"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}