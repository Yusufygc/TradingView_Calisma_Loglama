{
  "manifest_version": 3,
  "name": "TradingView Activity Logger",
  "version": "1.0",
  "description": "TradingView'daki aktivitelerinizi tarih ve saate g√∂re loglar",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.tradingview.com/*",
    "https://tr.tradingview.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.tradingview.com/*",
        "https://tr.tradingview.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}